<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".liberty_media_account_main"
    android:background="#ffffff">


    <ImageView
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:src="@drawable/libertyl"
        android:layout_marginTop="45dp"
        android:layout_gravity="center"/>

    <customfonts.EditText_Roboto_Regular
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Blade_Bringer"
        android:textColor="#1c252a"
        android:textSize="18sp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/media_ract"/>

    <customfonts.EditText_Roboto_Regular
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="*************"
        android:textColor="#1c252a"
        android:textSize="18sp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:drawableRight="@drawable/ic_ok"
        android:paddingRight="15dp"
        android:background="@drawable/media_ract"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="35dp">

        <customfonts.MyTextView_Roboto_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sign_ract"
            android:text="Sign"
            android:paddingTop="10dp"
            android:paddingBottom="12dp"
            android:textSize="18sp"
            android:paddingRight="33dp"
            android:paddingLeft="33dp"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff"/>

        <customfonts.MyTextView_Roboto_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login_ract"
            android:text="Login"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="18sp"
            android:paddingRight="28dp"
            android:paddingLeft="28dp"
            android:textColor="#ffffff"/>






    </LinearLayout>



    <customfonts.MyTextView_Roboto_Regular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign with a social account"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="15sp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:textColor="#758692"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/fb_media_ract"
        android:gravity="center">
        
        <ImageView
            android:layout_width="15dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_facebook"/>


        <customfonts.MyTextView_Roboto_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login with Facebook"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="18sp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="#3245b8"
            android:layout_gravity="center"/>
        
        
        
        
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/tw_media_ract"
        android:gravity="center">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_twitter"/>


        <customfonts.MyTextView_Roboto_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login with Twitter"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="18sp"
            android:layout_marginRight="20dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="#0091ea"
            android:layout_gravity="center"/>





    </LinearLayout>

</LinearLayout>